struct VertexColorOutput
{
    float4 Position : SV_Position;
    float4 Color : COLOR0;
    float4 wvpPosition : POSITION0;
};

struct VertexUVOutput
{
    float4 Position : SV_Position;
    float2 UV : TEXCOORD0;
    float4 wvpPosition : POSITION0;
};
