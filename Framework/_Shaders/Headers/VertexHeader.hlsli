///////////////////////////////////////////////////////////////////////////////
// Structs
///////////////////////////////////////////////////////////////////////////////
struct VertexColorInput
{
    float4 Position : POSITION0;
    float4 Color : COLOR0;
};

struct VertexUVInput
{
    float4 Position : POSITION0;
    float2 UV : TEXCOORD0;
};
///////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////
// Constant Buffers
///////////////////////////////////////////////////////////////////////////////
cbuffer WorldBuffer : register(b0)
{
    matrix World;
}

cbuffer ViewProjectionBuffer : register(b1)
{
    matrix View;
    matrix InvView;
    matrix Projection;
}
